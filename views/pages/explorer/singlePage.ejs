<%- include('../../partials/header.ejs') %>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <section>
                        <h3>
                            <%= post.title %>
                        </h3>
                        <div class="d-flex">
                            <small>
                                <%= moment(post.createdAt) %> ,
                                    Post By <%= post.author.username %> ,
                                        <%= post.readTime %>
                            </small>
                            <% if(user){%>
                                <span class="ml-auto bookmark" data-post='<%= post._id%>'>
                                    <% if(bookmarks.includes(post._id)) {%>
                                        <i class="fa fa-bookmark" aria-hidden="true"></i>

                                        <%}else{%>
                                            <i class="fa fa-bookmark-o" aria-hidden="true"></i>
                                            <%}%>
                                </span>
                                <%} %>
                        </div>
                        <% if(post.thumbnail){%>
                            <img src="<%= post.thumbnail %> " alt="" class="img-fluid">
                            <%} %>
                                <section>
                                    <%- post.body %>
                                </section>
                                <section>
                                    <% if(!user){%>
                                        <button class="btn btn-success btn-sm" disabled>
                                            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                                            <%= post.likes.length %>
                                        </button>
                                        <button class="btn btn-danger btn-sm" disabled>
                                            <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
                                            <%= post.dislikes.length %>
                                        </button>
                                        <p class="text-center text-muted">To like and comment Please login <a
                                                href="/auth/login">Login</a></p>
                                        <%}else{%>
                                            <button class="btn btn-success btn-sm" id="likeBtn"
                                                data-post="=<%= post._id %>">
                                                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                                                <%= post.likes.includes(user._id) %>
                                            </button>
                                            <button class="btn btn-danger btn-sm" id="dislikeBtn">
                                                <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
                                                <%= post.dislikes.length %>
                                            </button>
                                            <%} %>
                                </section>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/footer.ejs') %>
        <script src="/scripts/bookmarks.js"></script>

        </body>

        </html>